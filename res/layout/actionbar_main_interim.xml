<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/actbar_interim_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/actbar_interim_tv_title"
        style="@style/TextNavigationTitle"
        android:layout_weight="0.1"
        android:text="1已选" />

    <Button
        android:id="@+id/actbar_interim_btn_share"
        style="@style/ImageButtonStyle"
        android:background="@drawable/img_share" />

    <Button
        android:id="@+id/actbar_interim_btn_delete"
        style="@style/ImageButtonStyle"
        android:background="@drawable/img_delete" />

    <Button
        android:id="@+id/actbar_interim_btn_overflow"
        style="@style/ImageButtonStyle"
        android:background="@drawable/img_over_flow" />

</LinearLayout>